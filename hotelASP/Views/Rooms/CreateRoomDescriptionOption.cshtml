@model hotelASP.Models.RoomDescriptionViewModel

@{
    ViewData["Title"] = "Opcje pokojów";
}

<div class="mainPage">
    <div class="standardHeader">
        <h3>Dodaj nową opcję do opisu pokoju:</h3>
        <a asp-action="Index" class="addRoomStandardTypeBtn">Wróć</a>
    </div>
    <hr />

    <div class="row">
        <form asp-action="CreateRoomDescriptionOption">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="NewOption.Name" class="control-label">Nazwa opcji:</label>
                <input asp-for="NewOption.Name" class="form-control" />
                <span asp-validation-for="NewOption.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <h3>Obecne opcje:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa opcji</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ExistingOptions)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <form asp-action="DeleteRoomDescriptionOption" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.ID" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Czy na pewno chcesz usunąć tę opcję?');">Usuń</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
