@model IEnumerable<hotelASP.Entities.Room>
@{
    ViewData["Title"] = "Pokoje";
}

@section Styles {
    <link rel="stylesheet" href="~/css/roomStyle.css" />
}
@section Scripts {
    <script src="~/js/room.js"></script>
}

<div class="mainPage">
    <div class="optionsBox">
        @if (User.IsInRole("manager") || User.IsInRole("admin"))
        {
            <div class="addButtonsRow">
                <a asp-controller="Rooms" asp-action="CreateRoom" class="addRoomStandardTypeBtn"> Dodaj pokój </a>
                <a asp-controller="Rooms" asp-action="CreateStandard" class="addRoomStandardTypeBtn"> Dodaj standard </a>
                <a asp-controller="Rooms" asp-action="CreateRoomType" class="addRoomStandardTypeBtn"> Dodaj typ </a>
            </div>
        }
        <div class="selectedRoomActions">
            <button id="detailsBtn" class="addRoomStandardTypeBtn" disabled>Szczegóły</button>
            @if (User.IsInRole("manager") || User.IsInRole("admin"))
            {
                <button id="editBtn" class="addRoomStandardTypeBtn" disabled>Edytuj</button>
                <button id="deleteBtn" class="addRoomStandardTypeBtn" disabled>Usuń</button>
            }
        </div>
    </div>

    <div class="roomsTable">
        <table class="table" id="roomsTable">
            <thead>
                <tr>
                    <th>Numer pokoju</th>
                    <th>Opis pokoju</th>
                    <th>Cena</th>
                    <th>Czy zajęty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-room-id="@item.IdRoom">
                        <td>@item.RoomNumber</td>
                        <td>
                            @if (item.RoomDescriptions != null && item.RoomDescriptions.Any())
                            {
                                <ul class="room-options-list">
                                    @foreach (var desc in item.RoomDescriptions)
                                    {
                                        <li>@desc.DescriptionOption?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Brak opcji</span>
                            }
                        </td>
                        <td>@item.Price zł</td>
                        <td>
                            @if (item.IsTaken == 0)
                            {
                                <span style="color:green;">Wolny</span>
                            }
                            else
                            {
                                <span style="color:red;">Zajęty</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


