@model IEnumerable<hotelASP.Entities.Room>
@{
    ViewData["Title"] = "Pokoje";
}

<div class="mainPage">

    @if (User.IsInRole("manager") || User.IsInRole("admin"))
    {
        <div class="boxRoomStandardType">
            <a asp-controller="Rooms" asp-action="CreateRoom" class="addRoomStandardTypeBtn"> Dodaj pokój </a>
            <a asp-controller="Rooms" asp-action="CreateStandard" class="addRoomStandardTypeBtn"> Dodaj standard </a>
            <a asp-controller="Rooms" asp-action="CreateRoomType" class="addRoomStandardTypeBtn"> Dodaj typ </a>
        </div>
    }

    <div class="roomsTable">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Numer pokoju
                    </th>
                    <th>
                        Opis pokoju
                    </th>
                    <th>
                        Cena
                    </th>
                    <th>
                        Czy zajęty
                    </th>
                    <th>Opcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @if (item.RoomDescriptions != null && item.RoomDescriptions.Any())
                            {
                                <ul class="room-options-list">
                                    @foreach (var desc in item.RoomDescriptions)
                                    {
                                        <li>@desc.DescriptionOption?.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">Brak opcji</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price) zł
                        </td>
                        <td>
                            @{
                                if (item.IsTaken == 0)
                                {
                                    <span style="color:green;">Wolny</span>
                                }
                                else
                                {
                                    <span style="color:red;">Zajęty</span>
                                }
                            }
                        </td>

                        <td>
                            <div class="optionsSection">
                                <a asp-action="Details" asp-route-id="@item.IdRoom" class="addRoomStandardTypeBtn">Szczegóły</a>
                                @if (User.IsInRole("manager") || User.IsInRole("admin"))
                                {
                                    <a asp-action="UpdateRoom" asp-route-id="@item.IdRoom" class="addRoomStandardTypeBtn">Edytuj</a>
                                    <a asp-action="DeleteRoom" asp-route-id="@item.IdRoom" class="addRoomStandardTypeBtn">Usuń</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll("th").forEach((header, index) => {
            header.style.cursor = "pointer";

            header.addEventListener("click", () => {
                let table = header.closest("table");
                let rows = Array.from(table.querySelectorAll("tbody tr"));
                let asc = header.asc = !header.asc;

                document.querySelectorAll("th").forEach(th => {
                    th.innerHTML = th.innerHTML.replace(/ ▲| ▼/g, "");
                });

                header.innerHTML += asc ? " ▲" : " ▼";

                rows.sort((a, b) => {
                    let cellA = a.cells[index].innerText.trim();
                    let cellB = b.cells[index].innerText.trim();

                    let valA = parseFloat(cellA.replace(",", "."));
                    let valB = parseFloat(cellB.replace(",", "."));

                    if (!isNaN(valA) && !isNaN(valB)) {
                        return asc ? valA - valB : valB - valA;
                    }
                    return asc
                        ? cellA.localeCompare(cellB, "pl", { numeric: true })
                        : cellB.localeCompare(cellA, "pl", { numeric: true });
                });

                rows.forEach(row => table.querySelector("tbody").appendChild(row));
            });
        });
    });
</script>

