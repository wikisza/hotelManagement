@model hotelASP.Entities.Standard
@{
    ViewData["Title"] = "CreateStandard";
}

<div class="mainPage">

<h3>Dodaj nowy standard</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStandard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Nazwa standardu:</label>
                <input asp-for="StandardName" class="form-control" />
                <span asp-validation-for="StandardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Wartość standardu: (mnożnik bazowej ceny)</label>
                <input asp-for="StandardValue" class="form-control" />
                <span asp-validation-for="StandardValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj standard" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy pokoi</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
