@model hotelASP.Models.RoomTypeViewModel

@{
    ViewData["Title"] = "CreateType";
}

<div>
    <h3>Dodaj nowy typ:</h3>
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">
    <form asp-action="CreateType">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NewRoomType.PeopleNumber" class="control-label"></label>
            <input asp-for="NewRoomType.PeopleNumber" class="form-control" />
            <span asp-validation-for="NewRoomType.PeopleNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewRoomType.BedNumber" class="control-label"></label>
            <input asp-for="NewRoomType.BedNumber" class="form-control" />
            <span asp-validation-for="NewRoomType.BedNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewRoomType.BasePrice" class="control-label"></label>
            <input asp-for="NewRoomType.BasePrice" class="form-control" />
            <span asp-validation-for="NewRoomType.BasePrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<h3>Obecne typy:</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Liczba osób
            </th>
            <th>
                Liczba łóżek
            </th>
            <th>
                Cena bazowa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RoomTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PeopleNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BasePrice) zł
                </td>
                <td>
                    <a href="javascript:void(0)"
                       onclick="openEditModal('@item.IdType', '@item.PeopleNumber', '@item.BedNumber', '@item.BasePrice')">
                        Edytuj
                    </a> |
                    <a href="javascript:void(0)" onclick="openDeleteModal('@item.IdType')"> Usuń </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Edit Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h3>Edytuj typ</h3>
        <form id="editForm" method="post" asp-controller="Rooms" asp-action="EditRoomType">
            <input type="hidden" id="editId" name="IdType" />

            <div>
                <label>Liczba osób</label>
                <input type="number" id="editPeople" name="PeopleNumber" required />
            </div>
            <div>
                <label>Liczba łóżek</label>
                <input type="number" id="editBeds" name="BedNumber" required />
            </div>
            <div>
                <label>Cena bazowa</label>
                <input type="number" id="editPrice" name="BasePrice" step="0.01" required />
            </div>
            <input type="submit" value="Zapisz" class="btn btn-primary" />
        </form>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">&times;</span>
        <h3>Czy na pewno chcesz usunąć ten typ?</h3>
        <form id="deleteForm" method="post" asp-controller="Rooms" asp-action="DeleteRoomType">
            <input type="hidden" id="deleteId" name="IdType" />
            <div style="margin-top: 15px;">
                <input type="submit" value="Tak, usuń" class="btn btn-danger" />
                <button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Anuluj</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function openEditModal(id, people, beds, price) {
            document.getElementById("editId").value = id;
            document.getElementById("editPeople").value = people;
            document.getElementById("editBeds").value = beds;
            document.getElementById("editPrice").value = price;

            document.getElementById("editModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("editModal").style.display = "none";
        }

        window.onclick = function (event) {
            var editModal = document.getElementById("editModal");
            var deleteModal = document.getElementById("deleteModal");

            if (event.target === editModal) {
                editModal.style.display = "none";
            }
            if (event.target === deleteModal) {
                deleteModal.style.display = "none";
            }
        }
        
        function openDeleteModal(id) {
            document.getElementById("deleteId").value = id;
            document.getElementById("deleteModal").style.display = "block";
        }

        function closeDeleteModal() {
            document.getElementById("deleteModal").style.display = "none";
        }


    </script>
}
