@model hotelASP.Models.CreateOrderViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/createOrder.css" asp-append-version="true" />
}
<form asp-action="SubmitOrder" asp-controller="Orders" method="post">
    <div class="menu-container">
        <div class="menu-header">
            <h2>🍽️ Wybierz pozycje z menu</h2>
        </div>
        <div class="menu-body">
            @if (Model.AvailableMenuItems.Any())
            {
                @foreach (var category in Model.AvailableMenuItems)
                {
                    @if (category.MenuItems.Any())
                    {
                        <div class="category-section">
                            <h3 class="category-title">
                                <span>📌</span>
                                @category.Name
                            </h3>
                            <div class="menu-grid">
                                @foreach (var item in category.MenuItems)
                                {
                                    var selectedItem = Model.SelectedItems.FirstOrDefault(x => x.MenuItemId == item.Id);
                                    var quantity = selectedItem?.Quantity ?? 0;

                                    <div class="menu-item" data-item-id="@item.Id">
                                        <div class="menu-item-header">
                                            <h4 class="menu-item-name">@item.Name</h4>
                                            <span class="menu-item-price">@item.Price.ToString("0.00") zł</span>
                                        </div>
                                        <p class="menu-item-description">@item.Description</p>

                                        <div class="menu-item-flags">
                                            @if (!item.IsAvailable)
                                            {
                                                <span class="flag flag-unavailable">❌ Niedostępne</span>
                                            }
                                            @if (item.ContainsAlcohol)
                                            {
                                                <span class="flag flag-alcohol">🍷 Z alkoholem</span>
                                            }
                                        </div>

                                        <div class="menu-item-controls">
                                            <button type="button" class="qty-btn decrease-qty" @(item.IsAvailable ? "" : "disabled")>−</button>
                                            <span class="qty-display">@quantity</span>
                                            <button type="button" class="qty-btn increase-qty" @(item.IsAvailable ? "" : "disabled")>+</button>
                                            <button type="button" class="add-btn add-item-btn" @(item.IsAvailable ? "" : "disabled")>
                                                @(item.IsAvailable ? "Dodaj" : "Niedostępne")
                                            </button>
                                        </div>

                                        <input type="hidden" class="item-quantity" name="SelectedItems[@item.Id].MenuItemId" value="@item.Id" />
                                        <input type="hidden" class="item-quantity-value" name="SelectedItems[@item.Id].Quantity" value="@quantity" />
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">🍴</div>
                    <p>Brak dostępnych pozycji w menu</p>
                </div>
            }
        </div>
    </div>

    <div style="margin-top: 30px; display: flex; gap: 15px; justify-content: center;">
        <button type="button" class="btn btn-secondary" onclick="history.back()">← Wróć</button>
        <button type="submit" class="btn btn-primary">Złóż zamówienie ✓</button>
    </div>
</form>

@section Scripts {
    <script src="~/js/createOrder.js" asp-append-version="true"></script>
}