@model hotelASP.Models.CreateOrderViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/verifyGuests.css" asp-append-version="true" />
}
<div class="verification-container">
    <div class="verification-header">
        <h2>🔐 Weryfikacja Gościa</h2>
        <p>Podaj dane, aby kontynuować</p>
    </div>
    <div class="verification-body">
        <form asp-action="VerifyGuest" asp-controller="Orders" method="post">
            <div id="verificationError" class="alert-danger" style="display: none;"></div>

            <div class="form-group">
                <label class="form-label">
                    🏨 Numer pokoju <span class="required">*</span>
                </label>
                <input asp-for="RoomNumber" class="form-input" placeholder="np. 101" required />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">
                    👤 Nazwisko gościa <span class="required">*</span>
                </label>
                <input asp-for="GuestLastName" class="form-input" placeholder="np. Kowalski" required />
                <span asp-validation-for="GuestLastName" class="text-danger"></span>
            </div>

            <div class="form-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <button type="submit" class="btn btn-primary">Weryfikuj i kontynuuj →</button>
            </div>
        </form>
    </div>
</div>
