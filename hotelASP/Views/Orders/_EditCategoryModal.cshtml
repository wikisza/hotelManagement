@model hotelASP.Entities.MenuCategory

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">✏️ Edytuj kategorię</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form asp-action="EditCategory" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nazwa kategorii *</label>
                    <input asp-for="Name" class="form-control form-control-lg" required placeholder="np. Przystawki, Dania główne, Desery" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <div class="form-text">Podaj nazwę kategorii dla menu restauracji</div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">Anuluj</button>
                <button type="submit" class="btn btn-primary btn-lg">💾 Zapisz zmiany</button>
            </div>
        </form>
    </div>
</div>